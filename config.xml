        <oattr attr="name"/>
      </output>
      <output detail="all">
        <oattr attr="name"/>
        <oattr attr="band" detail="title"/>
      </output>
    </entity>
    <entity type="Post">
      <attr name="title" type="String"/>
      <attr name="date" type="String"/>
      <output detail="title">
        <oattr attr="title"/>
      </output>
      <output detail="all">
        <oattr attr="title"/>
        <oattr attr="date"/>
      </output>
    </entity>
