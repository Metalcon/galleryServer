      <attr name="name" type="String"/>
      <attr name="city" type="City"/>
      <attr name="records" type="Record[]"/>
      <attr name="posts" type="Post[]"/>
      <output detail="title">
        <oattr attr="name"/>
      </output>
      <output detail="all">
        <oattr attr="name"/>
        <oattr attr="city" detail="title"/>
        <oattr attr="records" detail="title"/>
        <oattr attr="posts" detail="title"/>
      </output>
    </entity>
